    "version": "0.2.0",
    "configurations": [
    {
      "name": "IPylab frontend with Firefox",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
      "pathMappings": [
        {
          "url": "webpack://jupyterlite/async-kernel/src",
          "path": "${workspaceFolder}/src"
        }
      ],
      "presentation": {
        "hidden": false
      }
    },
    ]
}